<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Interface.ActivityAdd">

    <TextView
        style="@style/chucnang"
        android:text="@string/themPB"/>
    <EditText
        style="@style/txt"
        android:id="@+id/txtMaPhong"
        android:hint="@string/nhapMP"/>
    <EditText
        style="@style/txt"
        android:id="@+id/txtTenPhong"
        android:hint="@string/nhapTP"/>
    <LinearLayout
        style="@style/linearh"
        android:layout_marginTop="50dp">
        <Button
            style="@style/button"
            android:id="@+id/btnthemPB"
            android:text="@string/them"
            android:drawableLeft="@drawable/ic_add_room_24"
            android:background="@drawable/them"/>
    </LinearLayout>

</LinearLayout>