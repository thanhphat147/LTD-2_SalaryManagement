<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/city2"
    tools:context=".Interface.SplashScreen">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="666dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgMNLeftMin"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/dongxu2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgMNLeftMax"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/dongxu2" />

            <ImageView
                android:id="@+id/imgMNLeftMin2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/dongxu2" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/imgNV"
            android:layout_width="250dp"
            android:layout_height="340dp"
            android:layout_marginTop="210dp"
            android:gravity="center_horizontal"
            android:src="@drawable/employer" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="666dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgMNRightMin"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/dongxu2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imgMNRightMax"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/dongxu2" />
            <ImageView
                android:id="@+id/imgMNRightMin2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/dongxu2" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>