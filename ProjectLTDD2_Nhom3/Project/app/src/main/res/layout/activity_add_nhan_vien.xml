<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/linear_v"
    android:background="@drawable/backgrounding"
    tools:context=".Interface.AddNhanVien">

    <TextView
        style="@style/tv_title"
        android:text="@string/tieude_addnv" />

    <EditText
        android:id="@+id/txtMaNV"
        style="@style/edttext"
        android:hint="@string/manv"
        android:inputType="text" />

    <EditText
        android:id="@+id/txtTenNV"
        style="@style/edttext"
        android:hint="@string/tennv"
        android:inputType="text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/txtNgaySinh"
            style="@style/edttext"
            android:layout_width="300dp"
            android:hint="@string/birth"
            android:inputType="date" />

        <ImageButton
            style="@style/button_model_view"
            android:src="@drawable/date"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RadioButton
            style="@style/btn_radio"
            android:text="Nam"
            />
        <RadioButton
            style="@style/btn_radio"
            android:text="Ná»¯"
            />
    </RadioGroup>

    <EditText
        android:id="@+id/txtLuong"
        style="@style/edttext"
        android:hint="@string/luong"
        android:inputType="number" />


    <Button
        android:id="@+id/btnThem"
        style="@style/button"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/add12"
        android:drawableLeft="@drawable/ic_baseline_person_add_24"
        android:text="@string/them"/>
</LinearLayout>