<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/linear_v"
    android:background="@drawable/backgrounding"
    tools:context=".Interface.AddTamUng">

    <TextView
        style="@style/tv_title"
        android:text="@string/themTU"/>
    <TextView
        style="@style/edttext"
        android:id="@+id/txtMaNV"
        android:text="@string/manv"
        android:textSize="20dp"/>
    <EditText
        style="@style/edttext"
        android:id="@+id/txtSoPhieu"
        android:hint="@string/nhapSP"/>
    <EditText
        style="@style/edttext"
        android:id="@+id/txtNgay"
        android:hint="@string/nhapNgay"/>
    <EditText
        style="@style/edttext"
        android:id="@+id/txtSoTien"
        android:hint="@string/nhapST"/>
    <Button
        android:id="@+id/btnthemTU"
        style="@style/button"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:drawableLeft="@drawable/ic_baseline_room_24"
        android:text="@string/them"/>
</LinearLayout>