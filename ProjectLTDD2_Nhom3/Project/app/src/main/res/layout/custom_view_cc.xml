<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/linear_h">

    <LinearLayout
        android:layout_width="303dp"
        android:layout_height="98dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvMaNV"
            style="@style/tv_model"
            android:layout_height="32dp"
            android:text="Mã nhân viên: " />

        <TextView
            android:id="@+id/tvNgayGhiSo"
            style="@style/tv_model"
            android:layout_height="32dp"
            android:text="Ngày ghi sổ: " />
        <TextView
            android:id="@+id/tvSoNgayCong"
            style="@style/tv_model"
            android:layout_height="32dp"
            android:text="Số ngày công: " />
    </LinearLayout>
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/btnXoa"
            style="@style/button_model"
            android:drawableLeft="@drawable/ic_baseline_delete_24"
            android:text="@string/xoa" />
        <Button
            android:id="@+id/btnSua"
            style="@style/button_model"
            android:drawableLeft="@drawable/ic_baseline_edit_24"
            android:text="@string/sua" />
    </LinearLayout>
</LinearLayout>