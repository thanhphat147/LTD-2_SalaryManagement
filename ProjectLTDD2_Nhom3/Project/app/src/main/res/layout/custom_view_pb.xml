<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    style="@style/linear_h">


    <LinearLayout
        style="@style/linear_v"
        android:layout_width="318dp">

        <LinearLayout style="@style/linear_h">

            <TextView
                style="@style/tv_noidung"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="@string/mapb" />

            <TextView
                android:id="@+id/tvMaPhong"
                style="@style/tv_noidung"
                android:layout_height="40dp" />
        </LinearLayout>

        <LinearLayout style="@style/linear_h">

            <TextView
                style="@style/tv_noidung"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="@string/tenpb" />

            <TextView
                android:id="@+id/tvTenPhong"
                style="@style/tv_noidung"
                android:layout_height="40dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btnXoa"
            style="@style/button_model_view"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/custom_button3"
            android:src="@drawable/ic_baseline_delete_24"
            />
        <ImageButton
            android:id="@+id/btnSua"
            style="@style/button_model_view"
            android:layout_marginLeft="10dp"
            android:background="@drawable/custom_button3"
            android:src="@drawable/ic_baseline_edit_24"
            />
    </LinearLayout>
</LinearLayout>